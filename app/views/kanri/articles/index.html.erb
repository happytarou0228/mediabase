<h1 class="page-header">記事一覧</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>id</th>
      <th>記事タイトル</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
		<% @articles.each do |a| %>
    <tr>
      <td><%= a.id %></td>
      <td><%= link_to a.title, edit_kanri_article_path(a) %></td>
      <td><%= link_to '編集', edit_kanri_article_path(a), class: "btn btn-default" %></td>
      <td><%= link_to '削除', kanri_article_path(a), method: :delete, data: { confirm: "削除しますがよろしいですか？" }, class: "btn btn-danger" %></td>
    </tr>
		<% end %>
  </tbody>
</table> 