<%= form_for([:kanri, @article]) do |f| %>
	<% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %></h2>

      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
	<div class="form-group">
		<label for="inputPassword" class="control-label">タイトル</label>
		<div>
			<%= f.text_field :title, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<label for="inputPassword" class="control-label">画像</label>
		<div>
			<%= f.file_field :image, class:"form-control" %>
		</div>
	</div>
	<div class="form-group">
		<label for="inputPassword" class="control-label">本文</label>
		<%= f.cktext_area :body %>
	</div>
	<div class="form-group">
		<div>
	  	<%= f.submit class: "btn btn-primary" %>
	  </div>
	</div>
<% end %>